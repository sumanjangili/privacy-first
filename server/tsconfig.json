{
  "compilerOptions": {
    "target": "ES2022",                 // supports topâ€‘level await (if you ever need it)
    "module": "CommonJS",               // keeps Node's default require system
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true,
    "noEmitOnError": true,
    "declaration": true,
    "incremental": true,
    "typeRoots": ["./node_modules/@types", "./typings"]   // omit "./typings" unless you added custom .d.ts files
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"] 
}
